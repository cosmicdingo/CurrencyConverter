<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_margin"
        tools:context=".ConverterActivity"
        android:orientation="vertical">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edittext_horizontal_margin"
                android:layout_gravity="left"
                android:inputType="numberDecimal"
                android:id="@+id/editText"
                tools:text="120.5" android:textSize="25sp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/edittext_horizontal_margin"
                android:inputType="numberDecimal"
                android:id="@+id/editText2"
                android:layout_gravity="right"
                tools:text="2.2" android:textSize="25sp"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/arrow"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/edittext_horizontal_margin"
                android:layout_gravity="left"
                android:inputType="numberDecimal"
                android:id="@+id/etValuteCharCode1"
                tools:text="RU"
                android:textSize="25sp"/>

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/edittext_horizontal_margin"
                android:inputType="numberDecimal"
                android:id="@+id/etValuteCharCode2"
                android:layout_gravity="right"
                tools:text="EUR"
                android:textSize="25sp"/>
    </FrameLayout>

</LinearLayout>